<UserControl x:Class="CustomElementsLib.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomElementsLib"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image x:Name="iconImage" Grid.Row="0" Source="pack://application:,,,/CustomElementsLib;component/image/Логотип_СТС_2005-2012.png"/>
        <TextBlock x:Name="infoText" VerticalAlignment="Center" Grid.Row="1"/>
    </Grid>
</UserControl>
